            android:id="@+id/bcalcular"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/tresultado"
            android:textSize="35sp"/>
    </LinearLayout>
</LinearLayout>
