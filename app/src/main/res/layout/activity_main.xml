                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/amarillo"
                android:id="@+id/ramarillo1"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/verde"
                android:id="@+id/rverde1"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/azul"
                android:id="@+id/razul1"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/violeta"
                android:id="@+id/rvioleta1"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/gris"
                android:id="@+id/rgris1"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/blanco"
                android:id="@+id/rblanco1"/>
        </RadioGroup>
        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
